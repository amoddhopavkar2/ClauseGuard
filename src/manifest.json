{
  "manifest_version": 3,
  "name": "ClauseGuard - Terms & Privacy Scanner",
  "version": "1.0.0",
  "description": "Detects and highlights risky clauses in Terms of Service and Privacy Policy pages. Works fully offline with no data collection.",
  "homepage_url": "https://github.com/amoddhopavkar2/ClauseGuard",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png"
    },
    "default_title": "ClauseGuard - Scan for Risky Clauses"
  },
  "background": {
    "service_worker": "background/serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
